CREATE TABLE PERSON (
    USER_ID NUMBER(5) GENERATED BY DEFAULT ON NULL AS IDENTITY START WITH 1 INCREMENT BY 1,
    FIRSTNAME VARCHAR2(20) NOT NULL,
    LASTNAME VARCHAR2(20) NOT NULL,
    EMAIL VARCHAR2(20) CONSTRAINT FK_USER_ACC REFERENCES ACCOUNT,
    PASSWORD VARCHAR2(20) NOT NULL
);

CREATE TABLE ACCOUNT (   
    EMAIL VARCHAR2(20) CONSTRAINT PK_ACC_EMAIL PRIMARY KEY,
    CHECKINGS_BALANCE NUMBER(9),
    SAVINGS_BALANCE NUMBER(9)
);


TRUNCATE TABLE ACCOUNT;

