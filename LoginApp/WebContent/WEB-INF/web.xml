<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>LoginApp</display-name>
  
  
  
  <servlet> 
  <servlet-name>loginFirstPage</servlet-name>
  <servlet-class>com.ServletExample.Login</servlet-class>
  </servlet>
  
  
   <servlet-mapping> 
  <servlet-name>loginFirstPage</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
    <servlet> 
  <servlet-name>failedPage</servlet-name>
  <servlet-class>com.ServletExample.FailedToLogin</servlet-class>
  </servlet>
  
  
   <servlet-mapping> 
  <servlet-name>failedPage</servlet-name>
  <url-pattern>/failed</url-pattern>
  </servlet-mapping>
  
  
  
   <servlet> 
  <servlet-name>SuccessPage</servlet-name>
  <servlet-class>com.ServletExample.SuccessfullyLogedIn</servlet-class>
  </servlet>
  
  
   <servlet-mapping> 
  <servlet-name>SuccessPage</servlet-name>
  <url-pattern>/success</url-pattern>
  </servlet-mapping>
  
  
  
  <welcome-file-list>
  
  
   
  
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  
  
  
  
</web-app>